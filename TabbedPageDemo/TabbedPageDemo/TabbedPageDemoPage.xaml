  </TabbedPage.Resources>
    <TabbedPage.Children>
        <ContentPage Title="Tab 1" IconImageSource="monkeyicon.png">
        <StackLayout Padding="5, 25">
            <Label Text="Tab 1"
                 Font="Bold,Large"
                 HorizontalOptions="Center" />
